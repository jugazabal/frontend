# Example environment variables
# Port for the Express backend (defaults to 3001 if unset)
PORT=3001
# Optional API base path override for frontend (usually leave empty to use same-origin /api)
VITE_API_BASE=
# MongoDB connection string (required for persistent storage)
MONGODB_URI=
# Separate test database URI (used when NODE_ENV=test); falls back to MONGODB_URI if unset
TEST_MONGODB_URI=
# Additional allowed CORS origins (comma separated, besides GitHub Pages origin)
ALLOWED_ORIGINS=
